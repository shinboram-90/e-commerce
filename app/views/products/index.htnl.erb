<h2>Products Index</h2>

<ol>
<% products.each do |product| %>
  <li>
    <%= product.title %>
    <%= form_tag order_items_path do%>
      <%= hidden_field_tag :product_id, product.id %>
      <%= bumber_field_tag :quantity, 1 %>
      <%= submit_tag "Add to cart" %>
      <% end %>
    <%= number_to_currency product.price %>
  </li>
<% end %>

</ol>